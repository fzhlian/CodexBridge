{
  "name": "@codexbridge/vscode-agent",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/extension.js",
  "types": "dist/extension.d.ts",
  "publisher": "fzhlian",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codexbridge.startAgent",
    "onCommand:codexbridge.stopAgent",
    "onCommand:codexbridge.agentStatus"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codexbridge.startAgent",
        "title": "CodexBridge: Start Agent"
      },
      {
        "command": "codexbridge.stopAgent",
        "title": "CodexBridge: Stop Agent"
      },
      {
        "command": "codexbridge.agentStatus",
        "title": "CodexBridge: Agent Status"
      }
    ],
    "configuration": {
      "title": "CodexBridge",
      "properties": {
        "codexbridge.autostart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start CodexBridge agent when VSCode starts."
        },
        "codexbridge.relayUrl": {
          "type": "string",
          "default": "ws://127.0.0.1:8787/agent",
          "description": "Relay websocket URL."
        },
        "codexbridge.machineId": {
          "type": "string",
          "default": "local-machine",
          "description": "Machine identifier used by CodexBridge relay."
        },
        "codexbridge.reconnectMs": {
          "type": "number",
          "default": 3000,
          "description": "Reconnect interval in milliseconds."
        },
        "codexbridge.heartbeatMs": {
          "type": "number",
          "default": 10000,
          "description": "Heartbeat interval in milliseconds."
        },
        "codexbridge.contextMaxFileChars": {
          "type": "number",
          "default": 12000,
          "description": "Maximum characters sent for active file context."
        },
        "codexbridge.contextMaxSelectionChars": {
          "type": "number",
          "default": 6000,
          "description": "Maximum characters sent for selected text context."
        }
      }
    }
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "eslint src test --ext .ts",
    "test": "vitest run",
    "dev": "node dist/index.js",
    "dev:node": "node dist/index.js",
    "package:vsix": "vsce package -o codexbridge-agent.vsix"
  },
  "dependencies": {
    "@codexbridge/codex-client": "workspace:*",
    "@codexbridge/shared": "workspace:*",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.2.2",
    "@types/vscode": "^1.97.0"
  }
}
